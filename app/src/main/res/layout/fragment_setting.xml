<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.SettingFragment">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/top_design"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="127dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_extrabold"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Subtitle + Icon on same line -->

        <!-- Search bar -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Manage language, notifications, and privacy"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/btndaimond"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleText" />

        <ImageView
            android:id="@+id/btndaimond"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle"
            android:scaleType="centerInside"
            android:src="@drawable/white_daimond"
            app:layout_constraintBottom_toBottomOf="@+id/subtitleText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/subtitleText"
            app:layout_constraintTop_toTopOf="@+id/titleText" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Credits Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/textsizecardview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- NEW LinearLayout as direct child of CardView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/cridets_bg"
            android:padding="5dp">

            <!-- EXISTING horizontal layout moved inside -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/daimond_shape" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Scan Credits"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You have 12 credits left!"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="12sp"
                        android:textColor="@color/lightgreen" />
                </LinearLayout>

                <TextView
                    android:id="@+id/btncredits"
                    android:layout_width="90dp"
                    android:layout_height="32dp"
                    android:background="@drawable/round_corner"
                    android:backgroundTint="@color/green1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Buy Credits"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>





    <!-- SCROLLABLE SETTINGS -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/textsizecardview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

        <!-- Now paste everything from "OCR Model" to "Rate App" here -->
        <!-- Remove all constraint-based positioning -->
        <!-- Replace with android:layout_marginTop, layout_marginStart, etc. -->

        <!-- Example: OCR Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="OCR Model"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium" />

        <com.google.android.material.card.MaterialCardView
            app:cardElevation="0dp"
            android:id="@+id/modelCardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeWidth="1dp"
            app:strokeColor="#DDDDDD"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingEnd="5dp"
                android:background="?selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/shape" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="OCR - Basic"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/subtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:lineHeight="10dp"
                        android:text="Pick how detailed you want your Urdu image recognition to be."
                        android:textColor="@color/lightgreen"
                        android:textSize="10sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/models"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="3dp"
                    android:src="@drawable/arrw" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

            <RelativeLayout
                android:id="@+id/voicsettinglayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="3dp"
                android:background="?selectableItemBackground"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/modelCardview">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Voice setting"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/voicebtn"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:rotation="180"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/toparrow"
                    android:text="Buy Credits" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/voicesetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/voicsettinglayout">

                <!-- Header Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/mice" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:text="Advanced Tuning"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Fine-tune how your scanned text will sound."
                            android:textColor="@color/lightgreen"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Sliders Grid (2 columns) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp"
                    android:weightSum="2">

                    <!-- Left Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="8dp">

                        <!-- Speech Rate -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Speech Rate"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:layout_marginStart="14dp"
                                android:fontFamily="@font/poppins_medium"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/speechRateValue"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:inputType="numberDecimal"
                                android:text="1.0"
                                android:textColor="@color/black"
                                android:textSize="10sp"/>
                        </LinearLayout>

                        <SeekBar
                            android:id="@+id/speech_rate"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:max="200"
                            android:progressDrawable="@drawable/seekbar_progress"
                            android:thumb="@drawable/seekbar_thumb"
                            android:progress="100" />

                        <!-- Audio Clarity -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="4dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Audio Clarity"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:layout_marginStart="14dp"
                                android:fontFamily="@font/poppins_medium"
                                android:textStyle="bold"/>

                            <EditText
                                android:id="@+id/audioClarityValue"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:inputType="numberDecimal"
                                android:text="1.0"
                                android:textColor="@color/black"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <SeekBar
                            android:id="@+id/audioClaritySeekbar"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:max="200"
                            android:progress="100"
                            android:progressDrawable="@drawable/seekbar_progress"
                            android:thumb="@drawable/seekbar_thumb" />
                    </LinearLayout>

                    <!-- Right Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <!-- Voice Tone -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Voice Tone"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:layout_marginStart="14dp"
                                android:fontFamily="@font/poppins_medium"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/voiceToneValue"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:inputType="numberDecimal"
                                android:text="1.0"
                                android:textColor="@color/black"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <SeekBar
                            android:id="@+id/voiceToneSeekbar"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:max="200"
                            android:progressDrawable="@drawable/seekbar_progress"
                            android:thumb="@drawable/seekbar_thumb"
                            android:progress="100" />

                        <!-- Response Delay -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="4dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Response Delay"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:layout_marginStart="14dp"
                                android:fontFamily="@font/poppins_medium"
                                android:textStyle="bold"/>

                            <EditText
                                android:id="@+id/responseDelayValue"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:inputType="numberDecimal"
                                android:text="1.0"
                                android:textColor="@color/black"
                                android:textSize="10sp"/>
                        </LinearLayout>

                        <SeekBar
                            android:id="@+id/responseDelaySeekbar"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:max="200"
                            android:progressDrawable="@drawable/seekbar_progress"
                            android:thumb="@drawable/seekbar_thumb"
                            android:progress="100" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_medium"
                android:padding="3dp"
                android:text="Localization"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/voicesetting" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/langlinaer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginVertical="5dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="5dp"
                    android:paddingEnd="5dp"
                    android:background="?selectableItemBackground">

                    <!-- Icon -->
                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/language"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/languageicon" />
                    </LinearLayout>

                    <!-- Title -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:text="Languages"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_regular" />

                        <!-- Optional subtitle: remove if not needed -->
                        <!--
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change your OCR languages"
                            android:textSize="10sp"
                            android:textColor="@color/lightgreen"
                            android:lineHeight="10dp"
                            android:fontFamily="@font/poppins_regular" />
                        -->
                    </LinearLayout>

                    <!-- Arrow -->
                    <ImageView
                        android:id="@+id/langauagearrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="3dp"
                        android:src="@drawable/arrw" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <TextView
            android:id="@+id/theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:padding="3dp"
            android:text="Theme"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/langlinaer" />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ojkh"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toBottomOf="@+id/theme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:gravity="center_vertical"
                    android:background="?selectableItemBackground">

                    <!-- Icon -->
                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/moon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/darkmode" />
                    </LinearLayout>

                    <!-- Text -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dark mode"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_regular" />
                    </LinearLayout>

                    <!-- Switch -->
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/darkModeSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/green1"
                        android:trackTint="@color/lightgreen" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
            android:id="@+id/appinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:padding="3dp"
            android:text="App Info"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ojkh" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInfoSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/appinfo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical">

                    <!-- Info Item -->
                    <LinearLayout
                        android:id="@+id/info"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="?selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/app_info" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:text="Info"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_regular" />

                        <ImageView
                            android:id="@+id/aboutApllication"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="3dp"
                            android:src="@drawable/arrw" />
                    </LinearLayout>

                    <!-- Privacy Item -->
                    <LinearLayout
                        android:id="@+id/privacy"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="?selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/privacy" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:text="Privacy Policy"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_regular" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="3dp"
                            android:src="@drawable/arrw" />
                    </LinearLayout>

                    <!-- Share Item -->
                    <LinearLayout
                        android:id="@+id/sharelinear"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="?selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/shareblack" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:text="Share App"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_regular" />

                        <ImageView
                            android:id="@+id/share"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="3dp"
                            android:src="@drawable/arrw" />
                    </LinearLayout>

                    <!-- Rate Item -->
                    <LinearLayout
                        android:id="@+id/rateSection"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="?selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/star" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:text="Rate App"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_regular" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="3dp"
                            android:src="@drawable/arrw" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
