<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.urduocr.scanner.fragments.SettingFragment">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/top_design"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="127dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Subtitle + Icon on same line -->




    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Credits Card -->
    <!-- ========= Scan‑Credits Card ========= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/textsizecardview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout2"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- —— single ConstraintLayout —— -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_bggreen"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/ivDiamond"
                android:layout_width="62dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/dollar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvCreditsSub"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Total scans left"
                android:textColor="@color/lightgray"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tvCreditsTitle"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/btnrestore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:background="?selectableItemBackground"
                android:drawableStart="@drawable/retakeicon_small"
                android:drawablePadding="8dp"
                android:fontFamily="@font/nunito_regular"
                android:text="Restore Purchases"
                android:textColor="@color/green1"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvCreditsTitle"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="350 OCR Credits"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/ivDiamond"
                app:layout_constraintTop_toBottomOf="@+id/tvCreditsSub" />


            <TextView
                android:id="@+id/buycredits"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_bg"
                android:fontFamily="@font/nunito_light"
                android:gravity="center"
                android:text="BUY MORE CREDITS"
                android:textColor="@color/green1"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@id/tvCreditsTitle"
                app:layout_constraintHorizontal_bias="0.084"
                app:layout_constraintStart_toStartOf="@id/tvCreditsTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvCreditsTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>






    <!-- SCROLLABLE SETTINGS -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/textsizecardview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

        <!-- Now paste everything from "OCR Model" to "Rate App" here -->
        <!-- Remove all constraint-based positioning -->
        <!-- Replace with android:layout_marginTop, layout_marginStart, etc. -->

        <!-- Example: OCR Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="OCR Model"
            android:padding="3dp"
            android:textColor="@color/lightgray"
            android:textSize="12sp"
            android:fontFamily="@font/nunito_bold" />

        <com.google.android.material.card.MaterialCardView
            app:cardElevation="0dp"
            android:id="@+id/modelCardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeWidth="1dp"
            app:strokeColor="#DDDDDD"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingEnd="5dp"
                android:background="?selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/shape" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:fontFamily="@font/nunito_regular"
                        android:text="OCR - Basic"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/subtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:lineHeight="10dp"
                        android:text="Pick how detailed you want your Urdu image recognition to be."
                        android:textColor="@color/lightgray"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/models"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="3dp"
                    android:src="@drawable/arrw" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:padding="3dp"
                android:text="Localization"
                android:textColor="@color/lightgray"
                android:textSize="12sp"
                android:fontFamily="@font/nunito_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/voicesetting" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/langlinaer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginVertical="5dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="5dp"
                    android:paddingEnd="5dp"
                    android:background="?selectableItemBackground">

                    <!-- Icon -->
                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/language"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/languageicon" />
                    </LinearLayout>

                    <!-- Title -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:text="Languages"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_regular" />

                        <!-- Optional subtitle: remove if not needed -->
                        <!--
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change your OCR languages"
                            android:textSize="10sp"
                            android:textColor="@color/lightgreen"
                            android:lineHeight="10dp"
                            android:fontFamily="@font/poppins_regular" />
                        -->
                    </LinearLayout>

                    <!-- Arrow -->
                    <ImageView
                        android:id="@+id/langauagearrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="3dp"
                        android:src="@drawable/arrw" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <TextView
            android:id="@+id/theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Theme"
           android:textColor="@color/lightgray"
            android:textSize="12sp"
                android:fontFamily="@font/nunito_bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/langlinaer" />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ojkh"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toBottomOf="@+id/theme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:gravity="center_vertical"
                    android:background="?selectableItemBackground">

                    <!-- Icon -->
                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/moon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/darkmode" />
                    </LinearLayout>

                    <!-- Text -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dark mode"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/nunito_regular" />
                    </LinearLayout>

                    <!-- Switch -->
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/darkModeSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/green1"
                        android:trackTint="@color/lightgreen" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
            android:id="@+id/appinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:padding="3dp"
            android:text="App Info"
            android:textColor="@color/lightgray"
            android:textSize="12sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ojkh" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInfoSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/appinfo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#DDDDDD"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Rate Item -->
                    <RelativeLayout
                        android:id="@+id/rateSection"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="?selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/star"
                            android:layout_centerVertical="true"
                            android:id="@+id/rateIcon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Rate App"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/rateIcon"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/nunito_regular" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="3dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/arrw" />
                    </RelativeLayout>

                    <!-- Share Item -->
                    <RelativeLayout
                        android:id="@+id/sharelinear"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="?selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/shareblack"
                            android:layout_centerVertical="true"
                            android:id="@+id/shareIcon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Share App"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/shareIcon"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/nunito_regular" />

                        <ImageView
                            android:id="@+id/share"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:padding="3dp"
                            android:src="@drawable/arrw" />
                    </RelativeLayout>


                    <!-- Privacy Item -->
                    <RelativeLayout
                        android:id="@+id/privacy"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="?selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/privacy"
                            android:id="@+id/privacyIcon"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Privacy Policy"
                            android:layout_toEndOf="@id/privacyIcon"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true"
                            android:textSize="12sp"
                            android:fontFamily="@font/nunito_regular" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="3dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/arrw" />
                    </RelativeLayout>

                    <!-- Info Item -->
                    <RelativeLayout
                        android:id="@+id/info"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="?selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp">

                        <ImageView
                            android:id="@+id/appInfoIcon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/app_info"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/infoText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/appInfoIcon"
                            android:text="More info on UrduFonts.com"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/nunito_regular" />

                        <ImageView
                            android:id="@+id/aboutApllication"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="3dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/arrw" />
                    </RelativeLayout>



                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
