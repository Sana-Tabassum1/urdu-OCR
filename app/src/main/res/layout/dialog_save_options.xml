<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/saveDialogRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_rounded">

    <!-- First Title -->
    <TextView
        android:id="@+id/tvSave"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:text="Save As?"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <!-- Second Title -->
    <TextView
        android:id="@+id/tvRichFormat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What format would you like to save your document in?"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/lightgreen"
        android:layout_marginBottom="16dp" />

    <!-- Description Text -->
    <EditText
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_round_green"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textAlignment="textStart"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginBottom="24dp" />

    <!-- Horizontal Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp">

        <TextView
            android:id="@+id/btnSaveAsFile"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/unselected_button"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Save as File"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnSaveAsPdf"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/unselected_button"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Save as PDF"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
